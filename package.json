{
  "name": "xstate-ts-to-mermaid",
  "version": "0.1.0",
  "description": "Convert XState v5 TypeScript state machines to Mermaid stateDiagram-v2 format",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "npm run test:fields",
    "test:fields": "npx tsx tests/field-coverage.test.ts",
    "example": "npx tsx examples/order-machine.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test"
  },
  "keywords": [
    "xstate",
    "mermaid",
    "state-machine",
    "statechart",
    "diagram",
    "visualization",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zitongcharliedeng/xstate-ts-to-mermaid.git"
  },
  "peerDependencies": {
    "@xstate/graph": "^3.0.0",
    "xstate": "^5.0.0"
  },
  "devDependencies": {
    "@xstate/graph": "^3.0.4",
    "typescript": "^5",
    "xstate": "^5.25.0"
  }
}
